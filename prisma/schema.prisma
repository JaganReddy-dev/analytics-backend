generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @unique @default(uuid())
  type      String
  action    String
  metadata  Json?
  website   String
  createdAt DateTime @default(now())

  @@index([website])
  @@index([type])
}

model Visitor {
  id           String   @id @unique @default(uuid())
  url          String
  browser      String
  os           String
  device       String
  referrer     String
  screenWidth  Int
  screenHeight Int
  timeStamp    DateTime @default(now())
  latlong      String

  //  location     String
  @@index([url])
}

