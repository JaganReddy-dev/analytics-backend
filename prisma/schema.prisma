generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(uuid())
  type      String
  website   String
  createdAt DateTime @default(now())

  @@index([website])
}

model Visitor {
  id           String   @unique @default(uuid())
  url          String
  device       String
  userAgent    String
  referrer     String
  screenWidth  String
  screenHeight String
  timeStamp    DateTime @default(now())
}
